---
// Header with Navigation
const navLinks = [
    { href: '#home', label: 'Home' },
    { href: '#services', label: 'Services' },
    { href: '#pricing', label: 'Pricing' },
    { href: '#testimonials', label: 'Testimonials' },
    { href: '#faq', label: 'FAQ' },
    { href: '#contact', label: 'Contact' },
];
---

<header id="main-header" class="sticky top-0 bg-white z-40 transition-shadow duration-300">
    <div class="container-custom py-4">
        <div class="flex items-center justify-between">
            <!-- Logo -->
            <a href="#home" class="flex items-center gap-2 no-underline">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-emerald" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                </svg>
                <span class="text-xl font-bold text-text-dark" style="font-family: var(--font-heading);">ClearSpace Cleaning</span>
            </a>

            <!-- Desktop Navigation -->
            <nav class="hidden lg:flex items-center gap-8">
                {navLinks.map(link => (
                    <a href={link.href} class="nav-link">{link.label}</a>
                ))}
            </nav>

            <!-- Desktop CTA & Phone -->
            <div class="hidden lg:flex items-center gap-4">
                <a href="tel:+447377392814" class="nav-link text-emerald font-semibold">
                    +44 7377 392814
                </a>
                <a href="#quote-form" class="btn">Get a Free Quote</a>
            </div>

            <!-- Mobile Menu Button -->
            <button
                id="menu-toggle"
                class="lg:hidden p-2 text-grey-modern hover:text-emerald transition-colors"
                aria-label="Open menu"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </div>
    </div>

    <!-- Mobile Menu Overlay -->
    <div id="menu-overlay" class="hidden fixed inset-0 bg-black/50 z-40 lg:hidden"></div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="fixed top-0 right-0 h-full w-80 max-w-full bg-white z-50 transform translate-x-full transition-transform duration-300 lg:hidden">
        <div class="p-6">
            <div class="flex items-center justify-between mb-8">
                <span class="text-xl font-bold text-text-dark" style="font-family: var(--font-heading);">Menu</span>
                <button id="close-menu" class="p-2 text-grey-modern hover:text-emerald" aria-label="Close menu">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <nav class="flex flex-col gap-4">
                {navLinks.map(link => (
                    <a href={link.href} class="nav-link text-lg py-2">{link.label}</a>
                ))}
            </nav>

            <div class="mt-8 pt-8 border-t border-gray-200">
                <a href="tel:+447377392814" class="flex items-center gap-2 text-emerald font-semibold mb-4 no-underline">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                    +44 7377 392814
                </a>
                <a href="#quote-form" class="btn w-full justify-center">Get a Free Quote</a>
            </div>
        </div>
    </div>
</header>

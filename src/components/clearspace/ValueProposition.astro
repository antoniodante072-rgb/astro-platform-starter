---
// Value Proposition - 3 Key Benefits
const benefits = [
    {
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
        </svg>`,
        title: 'Exceptional Quality',
        description: 'Our trained professionals deliver spotless results every time with attention to every detail'
    },
    {
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
        </svg>`,
        title: 'Eco-Friendly Products',
        description: 'We use environmentally safe cleaning products that are tough on dirt but gentle on your home'
    },
    {
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>`,
        title: 'Flexible Scheduling',
        description: 'Book cleanings that fit your schedule with convenient time slots including evenings and weekends'
    }
];
---

<section class="section bg-white">
    <div class="container-custom">
        <h2 class="section-title fade-in-on-scroll">Why Choose ClearSpace Cleaning?</h2>
        <p class="section-subtitle fade-in-on-scroll">We go above and beyond to make your home sparkle</p>

        <div class="grid md:grid-cols-3 gap-8">
            {benefits.map((benefit, index) => (
                <div class={`text-center p-6 fade-in-on-scroll animation-delay-${(index + 1) * 100}`}>
                    <div class="text-emerald mb-4 flex justify-center" set:html={benefit.icon} />
                    <h3 class="text-xl font-semibold mb-3">{benefit.title}</h3>
                    <p class="text-grey-modern">{benefit.description}</p>
                </div>
            ))}
        </div>
    </div>
</section>
